{% extends 'layout.twig' %}

{% block body %}
  {% for blog in data.blogs %}
    <article class="blog">
      <div class="date">
        <time datetime="">{{ blog.created_at }}</time>
      </div>
      <header>
        <h2><a href="/show?id={{ blog.id }}">{{ blog.title }}</a></h2>
      </header>
      <img src="img/{{ blog.image }}" />
      <div class="snippet">
        <p>{{ blog.blog }}</p>
        <p class="continue">
          <a href="/show?id={{ blog.id }}">Continue reading...</a>
        </p>
      </div>
      <footer class="meta">
        <p>
          Comments: <a href="#">{{ blog.numComments() }}</a>
        </p>
        <p>
          Posted by <span class="highlight">{{ blog.author }}</span> at {{ blog.created_at }}
        </p>
        <p>
          Tags: <span class="highlight">{{ blog.tags }}</span>
        </p>
      </footer>
    </article>
  {% endfor %}
{% endblock %}

{% block sidebar %}
  {% include 'sidebar.twig' %}
{% endblock %}